@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>Cursos</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Cursos</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: cursos">
                    <li>
                        <strong><span data-bind="text: NombreCurso"></span></strong>: <span data-bind="text: NombreCatedratico"></span>
                        <small><a href="#" data-bind="click: $parent.detalleCurso">Detalle</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <div class="col-md-4">
        <!-- ko if:detalleCurso -->

        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Detalle</h2>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <tr><td>Nombre:</td><td data-bind="text: detalleCurso().NombreCurso"></td></tr>
                        <tr><td>Categoria:</td><td data-bind="text: detalleCurso().Categoria"></td></tr>
                        <tr><td>Descripcion:</td><td data-bind="text: detalleCurso().Descripcion"></td></tr>
                        <tr><td>Catedratico:</td><td data-bind="text: detalleCurso().NombreCatedratico"></td></tr>
                    </table>
                 </div>
            </div>
        </div>

        <!-- /ko -->
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Nuevo curso</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: agregarCurso">
                    <div class="form-group">
                        <label for="inputCatedratico" class="col-sm-4 control-label">Catedratico</label>
                        <div class="col-sm-8">
                            <select data-bind="options:catedraticos, optionsText: 'Nombre', value: nuevoCurso.Catedratico"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: nuevoCurso">
                        <label for="inputNombre" class="col-sm-4 control-label">Nombre</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputNombre" data-bind="value:Nombre" />
                        </div>

                        <label for="inputCategoria" class="col-sm-4 control-label">Categoria</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputCategoria" data-bind="value:Categoria" />
                        </div>

                        <label for="inputDescripcion" class="col-sm-4 control-label">Descripcion</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputDescripcion" data-bind="value:Descripcion" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Alumnos</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: alumnos">
                    <li>
                        <strong><span data-bind="text: NombreAlumno"></span> <span data-bind="text: ApellidoAlumno"></span></strong> <span data-bind="text: NombreCurso"></span>
                        <small><a href="#" data-bind="click: $parent.detalleAlumno">Detalle</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <div class="col-md-4">
        <!-- ko if:detalleAlumno -->

        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Detalle</h2>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <tr><td>Nombre</td><td data-bind="text: detalleAlumno().NombreAlumno"></td></tr>
                        <tr><td>Apellido</td><td data-bind="text: detalleAlumno().ApellidoAlumno"></td></tr>
                        <tr><td>DPI</td><td data-bind="text: detalleAlumno().DPI"></td></tr>
                        <tr><td>Edad</td><td data-bind="text: detalleAlumno().Edad"></td></tr>
                        <tr><td>Curso</td><td data-bind="text: detalleAlumno().NombreCurso"></td></tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- /ko -->
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Nuevo alumno</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: agregarAlumno">
                    <div class="form-group">
                        <label for="inputCurso" class="col-sm-4 control-label">Curso</label>
                        <div class="col-sm-8">
                            <select data-bind="options:cursos, optionsText: 'NombreCurso', value: nuevoAlumno.Curso"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: nuevoAlumno">
                        <label for="inputNombre" class="col-sm-4 control-label">Nombre</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputNombre" data-bind="value:Nombre" />
                        </div>

                        <label for="inputApellido" class="col-sm-4 control-label">Apellido</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputApellido" data-bind="value:Apellido" />
                        </div>

                        <label for="inputDPI" class="col-sm-4 control-label">DPI</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputDPI" data-bind="value:DPI" />
                        </div>

                        <label for="inputEdad" class="col-sm-4 control-label">Edad</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputEdad" data-bind="value:Edad" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>